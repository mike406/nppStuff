<NotepadPlus>
    <functionList>
            <!-- =============================================== [ TP, MOD, TMOD ] -->
            <!-- LTX CADENCE LANGUAGE                                              -->
            <parser
                id="fn_udl_cadence"
                displayName="LTX Cadence (UDL)"
                commentExpr="(?-s:--.*?$)"
            >
                <function
                    mainExpr="^\h*(private\h+)?(procedure|function)\h*\w+"
                    displayMode="$functionName"
                >
                    <functionName>
                        <nameExpr expr="^\h*(private\h+)?(procedure|function)\h*\w+" />
                    </functionName>
                </function>
            </parser>
    </functionList>
</NotepadPlus>
